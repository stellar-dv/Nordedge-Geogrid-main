      navigator.geolocation.getCurrentPosition(
        (position) => {
          const location = {
            lat: position.coords.latitude,
            lng: position.coords.longitude
          };
          console.log('Got browser location:', location);
          resolve(location);
        },
        (error) => {
          console.error('Browser location error:', error);
